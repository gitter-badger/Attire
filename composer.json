    "type": "codeigniter-library",
     "keywords": [
        "twig",
        "assetic",
        "codeigniter-twig",
        "codeigniter",
        "codeigniter-assetic",
        "codeigniter-theme"
    ],
    "license": "MIT",
    "require": {
        "composer/installers": "*",
        "twig/twig": "^1.18",
        "kriswallsmith/assetic": "^1.2"
    }, 
    "homepage": "https://bitbucket.org/davidsosavaldes/ci-twig",
    "authors": [
        {
            "name": "David Sosa Valdes",
            "email": "david.sosa.valdes@gmail.com"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    }    
